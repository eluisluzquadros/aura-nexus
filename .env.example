# AURA NEXUS - Configuração de APIs
# Copie este arquivo para .env e preencha com suas chaves

# Google APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_CSE_API_KEY=your_google_cse_api_key_here
GOOGLE_CSE_CX=your_google_cse_cx_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Apify (Social Media Scraping)
APIFY_API_TOKEN=your_apify_token_here
APIFY_INSTAGRAM_ACTOR_ID=apify/instagram-scraper
APIFY_FACEBOOK_ACTOR_ID=apify/facebook-scraper

# Configurações do Sistema
MAX_WORKERS=3
BATCH_SIZE=5
CACHE_ENABLED=true
DEBUG_MODE=false

# Rate Limits (requisições por minuto)
GOOGLE_MAPS_RPM=60
OPENAI_RPM=50
ANTHROPIC_RPM=40
GOOGLE_CSE_RPM=100

# Timeouts (em segundos)
API_TIMEOUT=30
SCRAPING_TIMEOUT=60

# Diretórios
DATA_DIR=./data
CACHE_DIR=./data/cache
OUTPUT_DIR=./data/output
CHECKPOINT_DIR=./data/checkpoints